        <div class="main__controls__block">
          <div class="main__controls__button">
            <button class="leave_meeting" onclick = "close_window();return false">Leave Meeting</button>
          </div>

          <div class="main__controls__button">
            <button id="screenShare" name="button">Share Screen</button>
          </div>

        </div>

      </div>
    </div>

    <div class="main__right">
      <div class="main__header">
        <h6>Agendas</h6>
      </div>
      <div class="Agendas box">
        <ul>
          <%for(var i=0;i<newActivity.length;i++){%>
          <div class="item">
            <input type="checkbox" name="" value="">
            <p><%= newActivity[i] %> </p>
          </div>
          <%}%>
        </ul>
      </div>
      <div class="main__header">
        <h6>Chat</h6>
      </div>
      <div class="main__chat__window">
        <ul class="messages" id="m-list">

        </ul>
      </div>
      <div class="main__message_container">
        <input id="message" type="text" name="" value="" placeholder="Type message here...">
        <button id="submit-msg" type = "button" name = "button" onclick = "sendMessage()">Send</button>
      </div>

    </div>
  </div>

